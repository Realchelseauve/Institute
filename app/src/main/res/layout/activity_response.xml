<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Response"
    android:background="@color/Gold">

    <EditText
        android:id="@+id/editText10"
        android:layout_width="174dp"
        android:layout_height="86dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="51dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="254dp"
        android:layout_height="333dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView25"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-54dp"
        android:layout_marginStart="11dp"
        android:text="Record"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView30"
        android:layout_marginTop="78dp"
        android:text="Question"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView30"
        android:layout_marginTop="138dp"
        android:text="Response"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/textView31"
        android:layout_alignParentTop="true"
        android:layout_marginTop="205dp"
        android:text="Id"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText10"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:text="ANSWER"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText19"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText10"
        android:layout_marginBottom="142dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editText19"
        android:layout_marginEnd="31dp"
        android:text="Record"
        android:textSize="30sp"
        android:textStyle="bold" />
</RelativeLayout>